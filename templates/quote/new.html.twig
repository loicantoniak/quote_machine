{% extends 'base.html.twig' %}

{% block title %}Nouvelle citation{% endblock %}


{% block body %}
    <div class="container-fluid">
        <h1>Ajout d'une citation</h1>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                {{ form_start(form) }}

                {{ form_row(form.content, {'label': 'Contenu'}) }}
                {{ form_row(form.meta, {'label': 'Meta'}) }}
                {{ form_row(form.category, {'label': 'Catégorie', 'placeholder' : 'Catégories...'}) }}
                {{ form_row(form.save, {'label': 'Ajouter'}) }}
                {{ form_end(form) }}
            </div>
            <div class="col-4"></div>
        </div>
    </div>
{% endblock %}
